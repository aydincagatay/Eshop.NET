@model IEnumerable<ecom.Entity.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="margin-left :30px">Index</h2>

<p style="margin-left :30px">
    <a class="btn btn-primary btn-default" href="@Url.Action("Create")">Create New</a>
</p>


<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">

                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Category
                                    @Html.DisplayNameFor(model => model.Category.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Price)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Stock)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Image)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Slider)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsHome)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsApproved)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsFeatured)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Category.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Stock)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Image)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Slider)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsHome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsApproved)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsFeatured)
                                    </td>
                                    <td>
                                        <a class="btn btn-primary btn-default" href="@Url.Action("Edit", new { id = item.Id })">Edit</a>
                                        <a class="btn btn-primary btn-dark" href="@Url.Action("Details", new { id = item.Id })">Details</a>
                                        <a class="btn btn-primary btn-danger" href="@Url.Action("Delete", new { id = item.Id })">Delete</a>
                                    </td>
                                </tr>
                            }

                            </tbody>
                            <tfoot>

                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        </div>
        <!-- /.row -->
    </section>